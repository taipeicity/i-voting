<form>
    <fieldset>
        <field name="id" type="hidden"/>
        <field name="sf_cat" type="categorys" label="COM_SF_CATEGORY" labelclass="control-label"/>

        <field name="title" type="text" class="input-xlarge" size="30" label="名稱" required="true"
               labelclass="control-label"/>

        <field name="desc" type="editor" buttons="false" hide="pagebreak,readmore,testimonial" class="inputbox"
               filter="safehtml" label="議題介紹" required="true" labelclass="control-label"/>

        <field name="vote_way" type="textarea" class="inputbox large" label="投票方式" required="true" rows="3"
               cols="5" labelclass="control-label"/>
        <field name="voters_eligibility" type="textarea" class="inputbox large" label="投票人資格" required="true" rows="3"
               cols="5" labelclass="control-label"/>
        <field name="voters_authentication" type="textarea" class="inputbox large" label="投票人驗證方式" rows="3" cols="5"
               labelclass="control-label"/>
        <field name="during_vote" type="textarea" class="inputbox large" label="投票期間" rows="3" cols="5"
               labelclass="control-label"/>
        <field name="promotion" type="textarea" class="inputbox large" label="宣傳推廣方式" required="true" rows="3" cols="5"
               labelclass="control-label"/>
        <!--<field name="results_using" type="textarea"  class="inputbox large" label="投票結果運用方式" required="true" rows="3" cols="5" labelclass="control-label" />-->
        <field name="results_using" type="textarea" class="inputbox large" label="投票結果運用方式" rows="3" cols="5"
               labelclass="control-label"/>
        <field name="announcement_method" type="textarea" class="inputbox large" label="公布方式" required="true" rows="3"
               cols="5" labelclass="control-label"/>
        <field name="precautions" type="textarea" class="inputbox large" label="注意事項" required="true" rows="3" cols="5"
               labelclass="control-label"/>

        <field name="results_proportion" id="results_proportions" onchange="addtextarea()" required="true" type="list"
               labelclass="control-label" label="投票結果運用方式" default="default">
            <option value="whole">完全參採</option>
            <option value="part">部分參採</option>
            <option value="committee">送請專業委員會決策考量</option>
            <option value="other">其他</option>
        </field>
        <field name="part" type="text" class="input-xlarge" size="10" label="部分參採" labelclass="control-label"/>
        <field name="other" type="textarea" class="inputbox large" label="其他" rows="3" cols="5"
               labelclass="control-label"/>
        <field name="other_data" type="file" class="input-xlarge" size="50" label="其他參考資料" labelclass="control-label"
               accept="application/pdf"/>
        <field name="other_data2" type="file" class="input-xlarge" size="50" label="其他參考資料" labelclass="control-label"
               accept="application/pdf"/>
        <field name="other_data3" type="file" class="input-xlarge" size="50" label="其他參考資料" labelclass="control-label"
               accept="application/pdf"/>
        <field name="other_url" type="text" class="input-xlarge" size="10" label="其他參考網址" labelclass="control-label"
               filter="raw"/>
        <field name="followup_caption" type="textarea" class="inputbox large" rows="3" cols="5" label="後續辦理情形"
               labelclass="control-label" filter="raw"/>
        <field name="at_present" type="textarea" class="inputbox large" label="目前進度" required="true" rows="3" cols="5"
               labelclass="control-label"/>
        <field name="discuss_source" type="textarea" class="inputbox large" label="討論管道" required="true" rows="3"
               cols="5" labelclass="control-label" filter="raw"/>

        <field name="image" type="file" class="input-xlarge" size="30" label="議題圖示" labelclass="control-label"
               accept="image/*"/>

        <field name="layout" type="list" labelclass="control-label" label="版型" default="default">
            <option value="default">上圖下文</option>
            <option value="blog">圖文並排</option>
            <option value="text">無圖有文</option>
        </field>


        <field name="is_public" type="radio" class="btn-group" label="是否公開" labelclass="control-label" default="1">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>

        <field name="un_public_tmpl" type="list" label="非公開投票外框版型" labelclass="control-label" default="1">
            <option value="1">版型1</option>
            <option value="2">版型2</option>
        </field>

        <field name="is_define" type="radio" class="btn-group" label="是否成案" labelclass="control-label" default="1">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>

        <field name="proposal_process" type="radio" class="btn-group" label="提案流程" labelclass="control-label"
               default="1">
            <option value="1">初審階段</option>
            <option value="2">討論階段</option>
        </field>


        <field type="checkboxes" label="投票模式" name="vote_pattern" multiple="true" class="btn-group" required="true"
               labelclass="control-label">
            <option value="1">正式投票</option>
            <option value="2">練習投票</option>
        </field>


        <field name="asset_id" type="hidden" filter="unset"/>
        <field name="rules" type="rules" label="COM_SURVEYFORCE_SURVEY_RULES" translate_label="false" class="inputbox"
               filter="rules" component="com_surveyforce" section="survey" validate="rules"/>

        <field name="hits" type="hidden" default="0"/>

        <field name="created_by" type="user"
               label="JGLOBAL_FIELD_Created_by_Label" description="JGLOBAL_FIELD_CREATED_BY_DESC" readonly="true"/>
        <field name="created" type="calendar"
               label="JGLOBAL_FIELD_CREATED_LABEL" description="JGLOBAL_FIELD_CREATED_DESC"
               class="inputbox" size="22" format="%Y-%m-%d %H:%M:%S" readonly="true"
               filter="user_utc"/>
        <field name="modified_by" type="user" label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
               class="readonly" readonly="true" filter="unset" description="JGLOBAL_FIELD_MODIFIED_BY_DESC"/>
        <field name="modified" type="calendar" class="readonly"
               label="JGLOBAL_FIELD_Modified_Label" description="JGLOBAL_FIELD_MODIFIED_LABEL"
               size="22" readonly="true" format="%Y-%m-%d %H:%M:%S" filter="user_utc"/>

        <field name="published" type="radio" class="btn-group" labelclass="control-label" label="發佈狀態" default="1">
            <option value="1">發佈</option>
            <option value="0">停止</option>
        </field>


        <field
                name="publish_up"
                type="calendar"
                labelclass="control-label"
                label="上架時間"
                class="inputbox"
                format="%Y-%m-%d %H:%M:%S"
                size="22"
                filter="user_utc"
                weeknumbers="false"
                timeformat="24"
                showtime="true"
                required="true"
        />

        <field
                name="publish_down"
                type="calendar"
                labelclass="control-label"
                label="下架時間"
                class="inputbox"
                format="%Y-%m-%d %H:%M:%S"
                size="22"
                filter="user_utc"
                default="2035-12-31 00:00:00"
                weeknumbers="false"
                timeformat="24"
                showtime="true"
                required="true"
        />


        <field
                name="vote_start"
                type="calendar"
                labelclass="control-label"
                label="開始投票時間"
                class="inputbox"
                format="%Y-%m-%d %H:%M:%S"
                size="22"
                filter="user_utc"
                weeknumbers="false"
                timeformat="24"
                showtime="true"
                required="true"
        />

        <field
                name="vote_end"
                type="calendar"
                labelclass="control-label"
                label="投票結束時間"
                class="inputbox"
                format="%Y-%m-%d %H:%M:%S"
                size="22"
                filter="user_utc"
                weeknumbers="false"
                timeformat="24"
                showtime="true"
                required="true"
        />

        <field
                name="announcement_date"
                type="calendar"
                labelclass="control-label"
                label="公布日期"
                class="inputbox"
                format="%Y-%m-%d %H:%M:%S"
                size="22"
                filter="user_utc"
                weeknumbers="false"
                timeformat="24"
                showtime="true"
        />


        <field name="is_notice_email" type="radio" class="btn-group" labelclass="control-label" label="電子郵件訊息通知"
               default="0">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>

        <field name="remind_text" type="textarea" class="inputbox large" label="電子郵件-投票前提醒" rows="10" cols="5"
               labelclass="control-label" default="親愛的民眾您好：\r\n
\r\n
感謝您登記【XXXXXXXXXXXXXXXX（自動抓投票議題名稱）】i-Voting投票通知。
\r\n
現在已經開始投票了，請您至以下網址進行投票：【XXXXXXXXXXXXXXXX（自動抓）】，投票時間至【xxx/xx/xx xx:xx（自動抓結束時間）】止。
\r\n
臺北市政府 敬上
\r\n
◎備註：此信件由系統自動發出，請勿直接回覆。
"/>
        <field name="drumup_text" type="textarea" class="inputbox large" label="電子郵件-催票提醒" rows="5" cols="5"
               labelclass="control-label"/>
        <field name="end_text" type="textarea" class="inputbox large" label="電子郵件-投票結束通知提醒" rows="5" cols="5"
               labelclass="control-label"/>


        <field name="is_notice_phone" type="radio" class="btn-group" labelclass="control-label" label="手機訊息通知"
               default="0">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>


        <field name="is_place" type="radio" class="btn-group" labelclass="control-label" label="啟用現地投票" default="0">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>

        <field name="place_image" type="file" class="input-xlarge" size="30" label="掃瞄標的物圖片" labelclass="control-label"
               accept="image/*"/>

        <field name="is_analyze" type="radio" class="btn-group" labelclass="control-label" label="啟用分析功能" default="0">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>

        <field name="sms_user" type="text" label="簡訊平台帳號" labelclass="control-label"/>
        <field name="sms_passwd" type="text" label="簡訊平台密碼" labelclass="control-label"/>
        <field name="phone_remind_text" type="textarea" class="inputbox large" label="手機訊息-投票前提醒" rows="5" cols="5"
               labelclass="control-label"/>
        <field name="phone_drumup_text" type="textarea" class="inputbox large" label="手機訊息-催票提醒" rows="5" cols="5"
               labelclass="control-label"/>
        <field name="phone_end_text" type="textarea" class="inputbox large" label="手機訊息-投票結束通知提醒" rows="5" cols="5"
               labelclass="control-label"/>

        <field name="verify_precautions" type="textarea" class="inputbox large" label="驗證方式注意事項說明" rows="3" cols="5"
               labelclass="control-label"/>


        <field name="display_result" type="list" labelclass="control-label" label="票數顯示" default="2">
            <option value="0">不顯示</option>
            <option value="1">投票中顯示</option>
            <option value="2">結束後顯示</option>
        </field>

        <field name="result_num_type" type="radio" labelclass="control-label" label="投票結果數設定" default="0">
            <option value="0">全部</option>
            <option value="1">指定</option>
        </field>
        <field name="result_num" type="text" default="0" label="顯示幾個結果" filter="integer"/>

        <field name="result_orderby" type="list" labelclass="control-label" label="結果排序" default="2">
            <option value="0">依選項</option>
            <option value="1">依票數</option>
        </field>


        <field name="result_desc" type="editor" buttons="false" hide="pagebreak,readmore,testimonial" class="inputbox"
               filter="safehtml" label="總結果說明" labelclass="control-label"/>


        <field name="is_complete" type="radio" class="btn-group" labelclass="control-label" label="是否送審" default="0">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>

        <field name="is_checked" type="list" labelclass="control-label" label="是否審核通過" default="0">
            <option value="0">審核中</option>
            <option value="1">通過</option>
            <option value="2">退回修改</option>
        </field>


        <field name="is_lottery" type="radio" class="btn-group" labelclass="control-label" label="是否提供抽獎" default="0">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>


        <field name="verify_required" type="hidden"/>
        <field name="verify_type" type="hidden"/>
        <field name="verify_params" type="hidden"/>
        <field name="vote_num_params" type="hidden"/>
        <field name="analyze_column" type="hidden"/>

        <field name="checked_by" type="hidden"/>

    </fieldset>
</form>
